<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a10016322.weatherapp.MainActivity"
    android:background="#071a97">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/listView_id"
        android:choiceMode="none"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentDate_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_id"
        android:layout_below="@+id/currentDate_id"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_id"
        android:layout_below="@+id/location_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curCondition_id"
        android:layout_above="@+id/temp_id"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temp_id"
        android:layout_above="@+id/listView_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textSize="24dp"
        android:textColor="#bcbbbb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quote_id"
        android:layout_above="@+id/listView_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_id"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#bcbbbb"
        android:layout_toLeftOf="@+id/button_id"
        android:layout_toStartOf="@+id/button_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button_id"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="BK"
        android:id="@+id/backup_id"
        android:layout_alignTop="@+id/currentDate_id"
        android:layout_alignRight="@+id/listView_id"
        android:layout_alignEnd="@+id/listView_id" />

</RelativeLayout>